<h1 class="text-center">Restaurants</h1>

<div class="container">
<div class="card-columns m-4  ">
  <% @restaurants.each do |restaurant| %>

      <div class = "card" style="width:300px;height:250px;">
        <div class = "card-body card-positioning" >
          <h2><%= link_to restaurant.name, restaurant_path(restaurant), class: "plain-link" %></h2>
            <p>Address: <%= restaurant.address %></p>
            <p>Category: <%= restaurant.category.capitalize %></p>
            <p>Phone number: <%= restaurant.phone_number %></p>
         </div>
      </div>

   <% end %>
   </div>
</div>

