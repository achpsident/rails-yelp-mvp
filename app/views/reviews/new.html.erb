<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class = "text-center">Write a review for <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Add your review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
